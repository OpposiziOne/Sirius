//HELLO WORLD by http://codeforces.com/profile/Programmer
#include <stdio.h>
#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
const ll INF=1e18;
typedef double d;
typedef long double lld;

ll my_pow (ll a, ll n) {
    int res = 1;
    while (n)
        if (n & 1) { res *= a; --n; }
        else { a *= a; n >>= 1; }
    return res; }
const int MAXN = 1e5;
bool used[MAXN];
vector <int> topsort, g[MAXN], greverse[MAXN];
void DFS(int v)
{
    used[v] = true;
    for (auto it:g[v])
        if (!used[it])
            DFS(it);
    topsort.push_back(v);
}

int con[MAXN];

void dfs(int v, int color)
{
    con[v] = color;
    used[v] = true;
    for (auto it:greverse[v])
        if (!used[it])
            dfs(it, color);
}
int main()
{
    freopen("input.txt", "r", stdin);
    int n, m, x, y;
    cin>>n>>m;
    for (int i = 0; i < m; i++)
    {
        cin>>x>>y;
        g[x].push_back(y);
        greverse[y].push_back(x);
    }
    for (int i = 1; i <= n; i++)
        if (!used[i]){
            DFS(i);
        }
    for (int i = 1; i <= n; i++)
        used[i]  = false;
    int color = 1;
    for (int i = (int)topsort.size() - 1; i >= 0; i--)
    {
        int v = topsort[i];
        if (!used[v])
            dfs(v, color++);
    }
    cout<<color - 1<<'\n';
    for (int i = 1; i <= n; i++)
        cout<<con[i]<<" ";
return 0;
}
